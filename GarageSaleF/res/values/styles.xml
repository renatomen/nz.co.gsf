<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        
    </style>
    
    <style name="ListFont">
        <item name="typeface">Roboto-Light.ttf</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListFont.Distance">
        <item name="android:textSize">@dimen/list_row_item_distance_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/list_row_item_distance_layout_width</item>
        <item name="android:layout_height">@dimen/list_row_item_distance_layout_height</item>
        <item name="android:layout_margin">@dimen/list_row_item_distance_layout_margin</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ListFont.Primary">
        <item name="android:textSize">@dimen/list_row_item_primary_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_row_item_primary_layout_height</item>
        <item name="android:layout_marginTop">@dimen/list_row_item_primary_layout_margin_top</item>
        <item name="android:layout_marginRight">@dimen/list_row_item_primary_layout_margin_right</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ListFont.Secondary">
        <item name="android:textSize">@dimen/list_row_item_secondary_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_row_item_secondary_layout_height</item>
        <item name="android:layout_marginBottom">@dimen/list_row_item_secondary_layout_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/list_row_item_secondary_layout_margin_right</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AboutActivityFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/about_page_text_padding</item>
    </style>

    <style name="AboutActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="AboutActivityFont.Detail"></style>

    <!-- GarageSale Detail Overlay -->
    <style name="GaragesaleDetailFragmentFont">
        <item name="typeface">Roboto-Light.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GaragesaleDetailFragmentFont.Heading">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_fragment_heading_text_size</item>
        <item name="android:paddingLeft">@dimen/detail_fragment_heading_padding_left</item>
    </style>

    <style name="GaragesaleDetailFragmentFont.Heading.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GaragesaleDetailFragmentFont.Detail">
        <item name="android:textSize">@dimen/detail_fragment_detail_text_size</item>
        <item name="android:paddingLeft">@dimen/detail_fragment_detail_padding_left</item>
    </style>

    <style name="GaragesaleDetailFragmentFont.Detail.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
