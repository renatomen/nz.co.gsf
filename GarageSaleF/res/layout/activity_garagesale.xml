<?xml version="1.0" encoding="utf-8"?>
<!--  
   	Layout used to display a single garage sale with full details. 
   	Split the details on top and the map below. 
    
    --> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <fragment
        android:id="@+id/garagesale_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="nz.co.gsf.fragments.GarageSaleDetailFragment"/>

    <fragment
        android:id="@+id/garagesale_map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="nz.co.gsf.fragments.GMapFragment"/>

</LinearLayout>